{% extends 'base.html.twig' %}

{% block title %}Agency{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Lista de Agencias</h1>
        <a href="{{ path('app_agency_new') }}" class="btn btn-primary">Criar Agencia</a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Número</th>
                    <th>Banco</th>
                    <th>Gerente</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            {% for agency in agencies %}
                <tr>
                    <td>{{ agency.id }}</td>
                    <td>{{ agency.number }}</td>
                    <td>{{ agency.bank ? agency.bank.name : 'NA' }}</td>
                    <td>{{ agency.manager ? agency.manager.name : 'NA' }}</td>
                    <td>
                        <a class="btn btn-sm" href="{{ path('app_agency_show', {'id': agency.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-sm" href="{{ path('app_agency_edit', {'id': agency.id}) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
