{% extends 'base.html.twig' %}

{% block title %}Account index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Lista de Contas</h1>
        <a href="{{ path('app_account_new') }}" class="btn btn-primary">Criar Conta</a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Number</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            {% for account in accounts %}
                <tr>
                    <td>
                        <i class="badge bg-primary">{{ account.id }}</i>
                    </td>
                    <td>{{ account.number }}</td>
                    <td>
                        <a class="btn btn-sm" href="{{ path('app_account_show', {'id': account.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-sm" href="{{ path('app_account_edit', {'id': account.id}) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr class="text-center">
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
