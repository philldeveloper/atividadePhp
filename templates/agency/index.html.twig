{% extends 'base.html.twig' %}

{% block title %}Agency (olá mundo){% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center my-5">
            <h1>Lista de Agencias</h1>
            <a href="{{ path('app_agency_new') }}" class="btn btn-primary">Criar Agencia</a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Number</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                {% for agency in agencies %}
                    <tr>
                        <td>
                            <i class="badge bg-primary">{{ agency.id }}</i>
                        </td>
                        <td>{{ agency.number }}</td>
                        <td>
                            <a class="btn btn-sm" href="{{ path('app_agency_show', {'id': agency.id}) }}">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a class="btn btn-sm" href="{{ path('app_agency_edit', {'id': agency.id}) }}">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr class="text-center">
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        
    </div>
{% endblock %}
