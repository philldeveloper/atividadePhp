{% extends 'base.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Lista de Transações</h1>
        <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">Criar Transação</a>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Tipo de Operação</th>
                    <th>Valor</th>
                    <th>Descriçao</th>
                    <th>Data da Transação</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            {% for transaction in transactions %}
                <tr>
                    <td>{{ transaction.id }}</td>
                    <td>{{ transaction.operation is same as '1' ? 'Crédito' : transaction.operation is same as '2' ? 'Débito' : 'Transferencia'}}</td>
                    <td>{{ transaction.value ? transaction.value|format_currency('BRL') : '' }}</td>
                    <td>{{ transaction.description }}</td>
                    <td>{{ transaction.date ? transaction.date|date('d/m/Y') : '' }}</td>
                    <td>
                        <a class="btn btn-sm" href="{{ path('app_transaction_show', {'id': transaction.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-sm" href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
