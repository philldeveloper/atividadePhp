{% extends 'base.html.twig' %}

{% block title %}Gerente index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Lista de Gerentes</h1>
        <a href="{{ path('app_manager_new') }}" class="btn btn-primary">Criar Gerente</a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            {% for manager in managers %}
                <tr>
                    <td>
                        <i class="badge bg-primary">{{ manager.id }}</i>
                    </td>
                    <td>{{ manager.name }}</td>
                    <td>
                        <a class="btn btn-sm" href="{{ path('app_manager_show', {'id': manager.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-sm" href="{{ path('app_manager_edit', {'id': manager.id}) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr class="text-center">
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
