{% extends 'base.html.twig' %}

{% block title %}Bank index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Lista de Bancos</h1>
        <a href="{{ path('app_bank_new') }}" class="btn btn-primary">Criar Banco</a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            {% for bank in banks %}
                <tr>
                    <td>
                        <i class="badge bg-primary">{{ bank.id }}</i>
                    </td>
                    <td>{{ bank.name }}</td>
                    <td>
                        <a class="btn btn-sm" href="{{ path('app_bank_show', {'id': bank.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-sm" href="{{ path('app_bank_edit', {'id': bank.id}) }}">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr class="text-center">
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
