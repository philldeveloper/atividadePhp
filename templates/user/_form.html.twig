{{ form_start(form) }}
    {% if not form.vars.valid %}
    <ul class="text-danger mt-3 list-unstyled">
        {# Loop through every form item #}
        {% for child in form.children %}
            {# Display the errors of the form item #}
            {% for error in child.vars.errors %}
                <li> <i class="fa fa-exclamation-circle fa-1x me-2"></i> {{error.message}}</li>
            {% endfor %}
    {%endfor%}
    </ul>
    {%endif%}
    
    <div class="d-flex gap-2">
        <div class="col">
            {{ form_label(form.name, 'Digite o nome', {'label_attr': {'class': 'fw-bold py-3'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col">
            {{ form_label(form.address, 'Digite o endere√ßo', {'label_attr': {'class': 'fw-bold py-3'}}) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="d-flex gap-2">
        <div class="col">
            {{ form_label(form.phone, 'Digite o telefone', {'label_attr': {'class': 'fw-bold py-3'}}) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col">
            {{ form_label(form.email, 'Digite o Email', {'label_attr': {'class': 'fw-bold py-3'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div>
        {{ form_label(form.plainPassword, null, {'label': 'Informe uma senha:', 'label_attr': {'class': 'fw-bold py-3'} }) }}
    </div>
    <div>
        {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="d-flex align-items-center justify-content-between py-3">
        <a class="btn btn-outline-dark" href="{{ path('app_user') }}">Voltar para a Lista</a>
        <button class="btn btn-dark" type="submit">Salvar</button>
    </div>
{{ form_end(form) }}