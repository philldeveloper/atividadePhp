{% extends 'base.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Lista de Agencias</h1>
        <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">Criar Transação</a>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Operation</th>
                    <th>Value</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for transaction in transactions %}
                <tr>
                    <td>{{ transaction.id }}</td>
                    <td>{{ transaction.operation }}</td>
                    <td>{{ transaction.value ? transaction.value|format_currency('BRL') : '' }}</td>
                    <td>{{ transaction.description }}</td>
                    <td>{{ transaction.date ? transaction.date|date('d/m/Y') : '' }}</td>
                    <td>
                        <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}">show</a>
                        <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
