<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>BankSys 1.0 - {% block title %}Base Template{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" rel="stylesheet"/>
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;500&display=swap" rel="stylesheet">

        <link rel="stylesheet" href="{{asset('css/main.css')}}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                <a href="/" class="d-flex align-items-center col-md-2 mb-2 mb-md-0 text-dark text-decoration-none fs-5 quicksand-font">
                    my<b>Bank</b>
                </a>

                <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0 quicksand-font text-uppercase">

                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <li><a href="{{ path('app_user') }}" class="nav-link px-2 link-dark">Usuários</a></li>
                    {% endif %}

                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <li><a href="{{ path('app_bank_index') }}" class="nav-link px-2 link-dark">Bancos</a></li>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('app_manager_index') }}" class="nav-link px-2 link-dark">Gerentes</a></li>
                        <li><a href="{{ path('app_client_index') }}" class="nav-link px-2 link-dark">Clientes</a></li>
                    {% endif %}


                    {% if is_granted('ROLE_USER') %}
                        <li><a href="{{ path('app_account_index') }}" class="nav-link px-2 link-dark">Contas</a></li>
                        <li><a href="{{ path('app_agency_index') }}" class="nav-link px-2 link-dark">Agencias</a></li>
                    {% endif %}

                    {% if is_granted('ROLE_USER') %}
                        <li><a href="{{ path('app_transaction_index') }}" class="nav-link px-2 link-dark">Transações</a></li>
                    {% else %}
                        <li><a href="{{ path('app_transaction_new') }}" class="nav-link px-2 link-dark">Transações</a></li>
                    {% endif %}

                    {% if not is_granted('ROLE_USER') %}
                        <li><a href="{{ path('app_account_new') }}" class="nav-link px-2 link-dark">SOLICITE UMA CONTA</a></li>
                    {% endif %}
                </ul>

                <div class="col-md-3 text-end d-flex flex-row flex-wrap align-items-center justify-content-end">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-bold text-dark d-flex align-items-center gap-1" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                                    <span>{{app.user.name}} |</span>
                                    <i class="fa-regular fa-circle-user fa-fw"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end quicksand-font" aria-labelledby="navbarDropdown" data-bs-popper="none">
                                    <li><a class="dropdown-item" href="#!">Meu Perfil</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Sair</a></li>
                                </ul>
                            </li>
                        </ul>
                    {% else %}
                        <a href="{{ path('app_login') }}" type="button" class="btn btn-outline-dark">Fazer Login</a>
                    {% endif %}
                </div>
            </header>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show container" role="alert">
                <strong>{{message}}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('update') %}
            <div class="alert alert-primary alert-dismissible fade show container" role="alert">
                <strong>{{message}}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
        <div class="container my-4 quicksand-font">
            {% block body %}{% endblock %}
        </div>
        <script src="{{ asset('js/main.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>
