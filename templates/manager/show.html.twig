{% extends 'base.html.twig' %}

{% block title %}Manager{% endblock %}

{% block body %}
    <h1>Manager</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ manager.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ manager.name }}</td>
            </tr>
            <tr>
                <th>Agency</th>
                <td>{{ manager.agency ? manager.agency.number : 'NA' }}</td>
            </tr>
            <tr>
                <th>Bank</th>
                <td>{{ manager.agency and manager.agency.bank ? manager.agency.bank.name : 'NA' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_manager_index') }}">back to list</a>

    <a href="{{ path('app_manager_edit', {'id': manager.id}) }}">edit</a>

    {{ include('manager/_delete_form.html.twig') }}
{% endblock %}
