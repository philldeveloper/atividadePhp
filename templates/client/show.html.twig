{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Cliente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Contas</th>
                <td>
                    {{ client.accounts|join(', ') }}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex align-items-center justify-content-between py-3">
        <a class="btn btn-outline-dark" href="{{ path('app_client_index') }}">Voltar a Lista</a>
        <a class="btn btn-dark" href="{{ path('app_client_edit', {'id': client.id}) }}">Editar Cliente</a>
    </div>

    <h2 class="border-bottom py-3 my-3">Ações</h2>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
