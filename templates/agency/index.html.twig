{% extends 'base.html.twig' %}

{% block title %}Agency{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h3>Lista de Agencias ({{agencies|length}})</h3>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('app_agency_new') }}" class="btn btn-outline-dark fw-bold">Criar Agencia</a>
        {% endif %}
    </div>
    {# <hr> #}

    <div class="table-responsive-sm mt-4">
        <table class="table table-borderless table-striped">
            <caption class="mt-4">Lista de Agencias</caption>
            <thead class="fs-5 border-top">
                <tr>
                    {# <th>Id</th> #}
                    <th>Número</th>
                    <th>Banco</th>
                    <th>Contas</th>
                    {# <th>Clientes</th> #}
                    <th>Endereço</th>
                    <th>Gerente</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            {% for agency in agencies %}
                <tr>
                    {# <td>{{ agency.id }}</td> #}
                    <td>{{ agency.number }}</td>
                    <td>{{ agency.bank ? agency.bank.name : 'NA' }}</td>
                    <td>{{ agency.account|length }}</td>
                    {# <td>
                    {% for ag in agency.account %}
                        {{ ag.clients|length }}
                    {% endfor %}
                    </td> #}
                    <td>{{ agency.address }}</td>
                    <td>{{ agency.manager ? agency.manager.user.name : 'NA' }}</td>
                    <td>
                        <a class="btn btn-sm" href="{{ path('app_agency_show', {'id': agency.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>

                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <a class="btn btn-sm" href="{{ path('app_agency_edit', {'id': agency.id}) }}">
                                <i class="fa fa-edit"></i>
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Não há agencias cadastrados.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
